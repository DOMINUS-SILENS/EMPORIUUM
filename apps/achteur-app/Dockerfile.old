# Build stage
FROM node:18 AS builder
WORKDIR /app

# Copy package files first for better caching
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy the rest of the app and shared directory
COPY . .
COPY "c:/Users/MOHAMED/Documents/SOCLE_CODEX_SACRE/E-Commerce Platforme/shared/"
# Build the app
RUN npm run build

# Production stage
FROM nginx:alpine
WORKDIR "c:/Users/MOHAMED/Documents/SOCLE_CODEX_SACRE/E-Commerce Platforme/shared/nginx/html"

# Copy built assets from builder
COPY --from=builder /app/dist /shared

# Copy nginx config
COPY ./apps/achteur-app/nginx.conf /etc/nginx/conf.d/default.conf

# Expose port 80
EXPOSE 80

# Start nginx
CMD ["nginx", "-g", "daemon off;"]
