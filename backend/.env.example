# Application
ENVIRONMENT=development
DEBUG=True
SECRET_KEY=your-secret-key-here-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/ecommerce
POSTGRES_SERVER=localhost
POSTGRES_USER=emporium_user
POSTGRES_PASSWORD=emporium_pass
POSTGRES_DB=emporium_db
SQLALCHEMY_DATABASE_URI=postgresql://emporium_user:emporium_pass@localhost:5432/emporium_db

 
# First Superuser
FIRST_SUPERUSER_EMAIL=admin@example.com
FIRST_SUPERUSER_PASSWORD=admin123
FIRST_SUPERUSER_FULL_NAME="Admin System"

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002

# Logging
LOG_LEVEL=INFO
LOG_FILE=backend.log

# Email (pour les notifications)
MAIL_SERVER=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=your-email@example.com
MAIL_PASSWORD=your-email-password
MAIL_USE_TLS=True
MAIL_USE_SSL=False

# Redis (pour le cache)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Storage (pour les images)
STORAGE_PROVIDER=local
STORAGE_PATH=static/uploads

# Rate Limiting
RATELIMIT_ENABLED=True
RATELIMIT_DEFAULT=100/minute
RATELIMIT_STORAGE=memory
RATELIMIT_KEY_PREFIX=rate_limit
