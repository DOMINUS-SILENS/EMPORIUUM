{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@components/*": ["./src/*"],
      "@ui-core/*": ["../ui-core/src/*"],
      "@utils/*": ["../utils/src/*"]
    }
  },
  "include": [
    "src/**/*",
    "ui/**/*",
    "*.ts",
    "*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
} 